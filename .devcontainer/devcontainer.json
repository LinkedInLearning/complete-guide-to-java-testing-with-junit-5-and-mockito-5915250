{
	"name": "Java",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "17", //Can change to another of Java
			"INSTALL_MAVEN": "true",
			"INSTALL_GRADLE": "false",
			"NODE_VERSION": "lts/*"
		}
	},
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {
				"java.home": "/docker-java-home"
			},
			"extensions": [
				"vscjava.vscode-java-pack",
				"GitHub.github-vscode-theme"
			]
		}
	},
	"remoteUser": "vscode",
	"remoteEnv": {
		"ENVIRONMENT": "production",
		"DB_URL": "localhost",
		"WEATHER_SERVICE_API_KEY": "7b26c92417fd3678d52eac12dc870222"
	},
	"onCreateCommand": "echo PS1='\"$ \"' >> ~/.bashrc" //Set Terminal Prompt to $
}
// DevContainer Reference: https://code.visualstudio.com/docs/remote/devcontainerjson-reference